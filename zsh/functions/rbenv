# Get the name of the Ruby version using rbenv
rbenv_prompt_info() {
  # Check if rbenv is installed
  command -v rbenv >/dev/null 2>&1 || return

  # Get the current Ruby version from rbenv
  local rbenv_prompt
  rbenv_prompt=$(rbenv version-name 2>/dev/null)

  # If the prompt is empty, return
  [[ -z "${rbenv_prompt}" ]] && return

  # Display the Ruby version, stripping any "ruby-" prefix
  echo "[%{$fg_bold[red]%}${rbenv_prompt}%{$reset_color%}]" | sed "s/ruby-//"
}
