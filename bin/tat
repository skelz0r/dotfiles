#!/usr/bin/env bash
#
# tat - Attach to tmux session named after current directory
#

if [[ "$1" == "-h" || "$1" == "--help" ]]; then
  cat << EOF
Usage: $(basename "$0")

Attach to (or create) a tmux session named after the current directory.

Options:
  -h, --help    Show this help message
EOF
  exit 0
fi

name=$(basename "$PWD" | tr . -)

tmux -u attach -t $name || tmux -u new-session -s $name
