{
  "model": "opusplan",
  "statusLine": {
    "type": "command",
    "command": "~/.claude/statusline-command.sh"
  },
  "permissions": {
    "deny": [
      "Read(**.env)",
      "Read(**.env.*)",
      "Read(**/*token*)",
      "Read(**/*TOKEN*)",
      "Read(**master.key)",
      "Read(**sandbox.key)",
      "Read(**staging.key)",
      "Read(**production.key)"
    ]
  }
}
