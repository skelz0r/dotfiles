# Obtenir la version actuelle de Node.js avec nvm
nvm_prompt_info() {
  # Vérifie si nvm est disponible
  command -v nvm >/dev/null 2>&1 || return

  # Récupère la version actuelle de Node.js via nvm
  local nvm_prompt
  nvm_prompt=$(nvm current 2>/dev/null)

  # Si aucune version n'est retournée, quitte la fonction
  [[ -z "${nvm_prompt}" ]] && return

  # Affiche la version de Node.js en jaune
  echo "[%{$fg_bold[yellow]%}${nvm_prompt}%{$reset_color%}]"
}
