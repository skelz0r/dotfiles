{
  "languageserver": {
    "ruby-lsp": {
      "command": "ruby-lsp",
      "filetypes": ["ruby"],
      "initializationOptions": {
        "enabledFeatures": {
          "codeActions": true,
          "codeLens": false,
          "completion": true,
          "definition": true,
          "diagnostics": true,
          "documentHighlights": false,
          "documentLink": false,
          "documentSymbols": true,
          "foldingRanges": false,
          "formatting": true,
          "hover": true,
          "inlayHint": false,
          "onTypeFormatting": false,
          "selectionRanges": false,
          "semanticHighlighting": false,
          "signatureHelp": true,
          "typeHierarchy": false,
          "workspaceSymbol": false
        },
        "formatter": "rubocop",
        "linters": ["rubocop"],
        "indexing": {
          "excludedPatterns": [
            "**/node_modules/**",
            "**/tmp/**",
            "**/log/**",
            "**/vendor/bundle/**"
          ]
        },
        "experimentalFeaturesEnabled": false
      }
    }
  }
}
